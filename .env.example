# .env.example - TextFormer Configuration
# Copy this file to .env and fill in your credentials.

# --- Text LLM Provider ---
# Used for the core text splitting and structuring tasks.
OPENAI_API_KEY="sk-..."
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MODEL="gpt-4-turbo"

# --- Vision LLM (VLM) Provider ---
# Used for the optional image enrichment (--enable-vlm).
OPENAI_VLM_API_KEY="sk-..."
OPENAI_VLM_BASE_URL="https://api.openai.com/v1"
OPENAI_VLM_MODEL="gpt-4-vision-preview"
